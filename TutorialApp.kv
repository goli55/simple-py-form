<ScatterTextWidget>:
    orientation: 'vertical'
    TextInput: 
        id: default_textinput
        font_size: 130
        size_hint_y: None
        height: 200
        text: 'default'
        on_text: root.change_label_color()
    FloatLayout:
        Scatter:
            Label:
                id: my_label
                text: default_textinput.text
                font_size: 130




    